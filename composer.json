{
    "name": "elmijo/rest-client",
    "description": "Simple library to manage REST services consumption and at the same time facilitate the application of integration tests.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jerry Anselmi",
            "email": "jerry.anselmi@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.3",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "RestClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
